<script type="text/liquid" id="gameobject_class_template">
	<h1>{{name}}</h1>

	<div class="row">

		<div class="col-md-4 goc-properties">

	  		<h3 > Properties </h3>
	  		<table class="property-table"> 
	  			<thead> 
	  				<tr> 
	  					<th>Property</th> 
	  					<th>Datatype</th> 
	  					<th>Default Value</th> 
	  					<th>Inherited from</th> 
	  					<th></th> 


	  				</tr> 
	  			</thead> 
	  			<tbody> 
		  			{% for property in properties %}
