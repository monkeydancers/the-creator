	  					<td>{{property.name}}</td> 
	  					<td class="data-type">{{property.datatype}}</td> 
	  					<td class="default-value">{{property.default_value}}</td>
	  					<td class="inherited-from">{{property.inherited_from}}</td> 
	  					<td class="action"><a href="#" class="edit_propery_link" data-identifier="{{property.identifier}}"> edit</a> </td> 

